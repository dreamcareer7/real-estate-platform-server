{% if active_deals.length > 0 %}
  <mj-section background-color="#ffffff" padding="0px 32px 20px">
    <mj-column>
      <mj-text css-class="title" padding="0" align="center" font-family="Lato" font-size="18px">
        <a href="{{ '/dashboard/deals' | url }}">
          Active Deals
        </a>
      </mj-text>
    </mj-column>
  </mj-section>

  {% for deal in active_deals %}
    {% include './deal.mjml' %}
  {% endfor %}
{% endif %}
