{% if active_deals.length > 0 %}
  <mj-section background-color="#ffffff" padding="50px 32px 10px">
    <mj-column>
      <mj-text
        css-class="title"
        padding="0"
        align="left"
        font-family="Lato"
        font-size="20px"
      >
        <a href="{{ '/dashboard/deals' | url }}">
          Active Deals
        </a>
      </mj-text>
    </mj-column>
  </mj-section>

  {% for deal in active_deals %}
    {% include './deal.mjml' %}
  {% endfor %}
{% endif %}
