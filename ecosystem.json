    dev : {
      user : "shortlisted",
      host : "tehlug.org",
      ref  : "origin/v2-develop",
      repo : "git@bitbucket.org:rechat/shortlisted-server.git",
      path : "/home/shortlisted/rechat-dev",
      "post-deploy" : "npm install && PM2_HOME='~/.pm2-dev' pm2 startOrRestart ecosystem.json --env production"
    }
  }
